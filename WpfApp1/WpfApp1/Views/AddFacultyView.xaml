<Window x:Class="WpfApp1.Views.AddFacultyView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Views"
        xmlns:viewModel="clr-namespace:WpfApp1.ViewModels"
        xmlns:userControls="clr-namespace:WpfApp1.UserControls"
        mc:Ignorable="d"
        Title="Add Faculty" Height="450" Width="800">
    <Window.Resources>
        <viewModel:FacultyViewModel x:Key="FacultyViewModel"></viewModel:FacultyViewModel>
    </Window.Resources>
    <Grid ShowGridLines="False">
        <!--<userControls:AddFacultyUC Height="auto" Width="auto"></userControls:AddFacultyUC>-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label x:Name="lblHeader" Content="Faculty Details" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="22"></Label>
        <Label x:Name="lblFacultyID" Content="Faculty ID" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" Margin="280,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtFacultyID" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="150,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        
        <Label x:Name="lblFacultyName" Content="Faculty Name" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Left" Margin="280,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtFacultyName" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="150,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        
        <Label x:Name="lblDOB" Content="Date Of Birth" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Left" Margin="280,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtDOB" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="150,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        
        <Label x:Name="lblExperience" Content="Experience" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Left" Margin="280,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtExperience" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="150,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        
        <Label x:Name="lblQualification" Content="Qualification" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Left" Margin="280,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtQualification" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="150,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        
        <Button x:Name="btnSubmit" Content="Submit" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="6" Margin="20,10,20,10" FontSize="20"></Button>
    </Grid>
</Window>
